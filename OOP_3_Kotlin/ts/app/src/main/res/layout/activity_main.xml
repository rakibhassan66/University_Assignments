<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- ScrollView can only have one direct child, so wrap your content inside a LinearLayout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Child of ScrollView: LinearLayout to hold multiple elements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- TextViews inside the LinearLayout -->
            <TextView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textColorHighlight="#17B7C6"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name1"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deabrat"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textColorHighlight="#17B7C6"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/name2"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deabrat2"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textColorHighlight="#17B7C6"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/name3"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deabrat3"
                android:textSize="20sp"
                android:textIsSelectable="true"
                android:textColorHighlight="#17B7C6"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>